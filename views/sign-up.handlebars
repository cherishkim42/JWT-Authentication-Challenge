<div class="row">
    <div class="col-sm-4 col-sm-offset-4">
        <form action="/sign-up" method="post">
            <legend>Create an Account</legend>
            <div class="form-group">
                <label for="post-title">Username</label>
                <input type="text" name="username" class="form-control" id="sign-up-username" placeholder="Username">
            </div>
            <div class="form-group">
                <label for="post-subreddit">Password</label>
                <input name="password" type="password" class="form-control" id="sign-up-pw" placeholder="******" />
            </div>
            <div class='text-right'>
                <button type="submit" class="btn btn-primary">Sign Up!</button>
            </div>
        </form>
    </div>
</div>