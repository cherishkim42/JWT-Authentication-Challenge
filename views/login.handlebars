<div class="row">
    <div class="col-sm-4 col-sm-offset-4">
        <form action="/login" method="post">
            <legend>Log In</legend>
            <div class="form-group">
                <label for="post-title">Username</label>
                <input type="text" name="username" class="form-control" id="login-username" placeholder="Username">
            </div>
            <div class="form-group">
                <label for="post-subreddit">Password</label>
                <input name="password" type="password" class="form-control" id="login-pw" placeholder="Password" />
            </div>
            <div class='text-right'>
                <button type="submit" class="btn btn-primary">Log In</button>
            </div>
        </form>
    </div>
</div>